resource "aws_ecr_repository" "web" {
  name                 = "${var.app_name}-web-${var.environment}"
  image_tag_mutability = "MUTABLE"

  image_scanning_configuration {
    scan_on_push = true
  }

  tags = {
    Name = "${var.app_name}-web-ecr-${var.environment}"
  }
}

