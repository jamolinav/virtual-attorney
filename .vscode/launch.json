{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug web app",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/web",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "sourceMaps": true
    },
    {
      "name": "NestJS: debug API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start:debug"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "MCP: debug server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/mcp",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: debug all",
      "configurations": ["Next.js: debug web app", "NestJS: debug API", "MCP: debug server"]
    }
  ]
}
