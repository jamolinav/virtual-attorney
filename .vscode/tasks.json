{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Start All",
      "type": "shell",
      "command": "pnpm dev",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build: All",
      "type": "shell",
      "command": "pnpm build",
      "problemMatcher": ["$tsc"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Test: All",
      "type": "shell",
      "command": "pnpm test",
      "problemMatcher": ["$tsc"],
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Lint: All",
      "type": "shell",
      "command": "pnpm lint",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Seed: Database",
      "type": "shell",
      "command": "pnpm dx:seed",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
